generator client {
  provider = "prisma-client-js"
}

model Owner {
  id       Int     @id @default(autoincrement())
  email    String  @unique
  name     String?
  password String
  isValid  Boolean @default(false)
  users    User[]
}

model User {
  id       Int     @id @default(autoincrement())
  email    String  @unique
  name     String?
  password String
  isValid  Boolean @default(false)
  role     Role    @default(USER)
  owner    Owner   @relation(fields: [owner_id], references: [id])
  owner_id Int
  bill     Bill[]
}

model Bill {
  id               Int    @id @default(autoincrement())
  rent             Int
  electricity_unit Int
  month            Month
  internet_money   Int?
  waste_money      Int?
  other            String
  user             User   @relation(fields: [user_id], references: [id])
  user_id          Int
}

enum Month {
  JANURARY
  FEBURARY
  MARCH
  APRIL
  MAY
  JUN
  JULY
  AUGUST
  SEPTEMBER
  OCTOBER
  NOVEMBER
  DECEMBER
}

enum Role {
  USER
  ADMIN
}

model OTP {
  id        Int      @id @default(autoincrement())
  email     String
  otp       String
  expiresAt DateTime
  createdAt DateTime @default(now())
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}
